{
	"root": true,
	"env": {
		"node": true,
		"es2020": true,
		"browser": true,
		"webextensions": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2020
	},
	"rules": {
		"arrow-parens": "error",
		"no-undef": 2,
		"no-empty": "off",
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "^_",
				"varsIgnorePattern": "^_"
			}
		]
	}
}